<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.shuhan.plan.mapper.UserMapper">

    <resultMap id="UserRole" type="cn.shuhan.plan.domain.entity.UserEntity">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="pwd" property="pwd"/>
        <result column="icon" property="icon"/>
        <result column="telephone" property="telephone"/>
        <result column="address" property="address"/>
        <result column="remark" property="remark"/>
        <result column="isDelete" property="isDelete"/>
        <collection property="roles" ofType="cn.shuhan.plan.domain.entity.RoleEntity">
            <id column="rid" property="id"/>
            <result column="rname" property="name"/>
            <result column="rdescription" property="description"/>
        </collection>

    </resultMap>

    <select id="getRolesByUserName" resultType="cn.shuhan.plan.domain.entity.RoleEntity">
        SELECT
            r.id,
            r.name,
            r.description
        FROM
        `user` u
        LEFT JOIN user_role ur ON u.id = ur.user_id
        LEFT JOIN role r ON ur.role_id = r.id
        WHERE u.is_delete = 0 and u.username = #{username}
    </select>
    <select id="selectRolesByUsername" resultMap="UserRole">
        SELECT u.*,r.id rid, r.name rname, r.description rdescription FROM `user` u
        LEFT JOIN user_role ur ON u.id = ur.user_id
        LEFT JOIN role r ON ur.role_id = r.id
        WHERE u.username = #{username}
    </select>
</mapper>


