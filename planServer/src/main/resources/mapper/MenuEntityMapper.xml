<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.shuhan.plan.mapper.MenuMapper">

    <resultMap id="resultMap" type="cn.shuhan.plan.domain.entity.MenuEntity">
        <id column="id" property="id"/>
        <result column="url" property="url"/>
        <result column="path" property="path"/>
        <result column="component" property="component"/>
        <result column="iconCls" property="iconCls"/>
        <result column="keepAlive" property="keepAlive"/>
        <result column="requireAuth" property="requireAuth"/>
        <result column="parentId" property="parentId"/>
        <result column="enabled" property="enabled"/>
        <collection property="children" ofType="cn.shuhan.plan.domain.entity.MenuEntity">
            <id column="cid" property="id"/>
            <result column="url" property="url"/>
            <result column="path" property="path"/>
            <result column="component" property="component"/>
            <result column="iconCls" property="iconCls"/>
            <result column="keepAlive" property="keepAlive"/>
            <result column="requireAuth" property="requireAuth"/>
            <result column="parentId" property="parentId"/>
            <result column="enabled" property="enabled"/>
        </collection>
        <collection property="roles" ofType="cn.shuhan.plan.domain.entity.RoleEntity">
            <id column="rid" property="id"/>
            <result column="rname" property="name"/>
            <result column="rdescription" property="description"/>
        </collection>
    </resultMap>

    <select id="getAllMenu" resultMap="resultMap">
        SELECT m.*,r.`name` rname, r.description rdescription
        FROM menu m
        LEFT JOIN role_menu rm ON m.id = rm.menu_id
        LEFT JOIN role r ON rm.role_id = r.id
    </select>
</mapper>
